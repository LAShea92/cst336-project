<% include partials/header %>
  <h1>HPartsonline</h1>
	<div id="loginForm">
		Username: <input type="text" name="username" id="username"><br>
		Password: <input type="password" name="password" id="password"><br>
		<button id="loginButton" class="btn btn-success">Login</button>
	</div>
	<div id="adminDisplay" style="display: none;">
		<span>Welcome, admin!</span>
		<button id="logoutButton" class="btn btn-info">Logout</button>
	</div>
	<form id="filterByPrice">
		See items between <input type="text" id="lower"> and <input type="text" id="upper"> dollars
	</form>
	 <form action="/sortCategory" id="filterByCategory">
		<select name="catId" id="category">
			<option>Select One</option>
			<option value="1">Engines</option>
			<option value="2">Transmissions</option>
			<option value="3">Seats</option>
			<option value="4">Suspension</option>
			<option value="5">ECUs</option>
		</select>
<!-- 		<button id="filterCategory">Filter</button> -->
		<input type="submit" value="Filter">
	</form>

  <button type="submit" class="btn btn-secondary" id="viewCart" data-toggle="modal" data-target="#detailModal">View Cart</button>
	<div id="content">	
		<% inventory.forEach(function(item){ %>
			<div class="itemContainer">
				<img class="image" src='<%=item.imgSrc%>' width='200' height='200'>
				<span id="desc">Details: <%=item.description%></span>
				<div class="info">
					<div id="name"><%=item.name%></div>
					<button type="button" class="add" data-item-price='<%=item.price%>' data-item-name='<%=item.name%>'>ADD TO CART</button>
					<span id="price">  <%=item.price%></span><span id="dollar">$</span>
				</div>
				<button class="removeItem" id="delete" style="display:none" data-item-price='<%=item.price%>' data-item-name='<%=item.name%>'>REMOVE ITEM</button>
			</div>
			<br />
		<% }) %>
	</div>
	<% include partials/detail %>
<% include partials/footer %>